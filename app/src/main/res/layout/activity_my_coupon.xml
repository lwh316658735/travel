<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context="com.travel.ac.act.MyCouponActivity">

    <include
        android:id="@+id/include"
        layout="@layout/include_title_login"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/include"
        android:background="#ffffff"
        android:paddingBottom="15dp"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/tv_keshiyong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"
            android:background="@drawable/selector_xuanzhe"
            android:clickable="true"

            android:focusableInTouchMode="true"
            android:text="可使用"/>

        <TextView
            android:id="@+id/tv_shixiao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/selector_xuanzhe"
            android:clickable="true"
            android:focusableInTouchMode="true"
            android:text="已失效"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_coupon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@mipmap/no_order_pic"/>

    <TextView
        android:id="@+id/tv_dianziquan_hint"
        style="@style/title_font"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_coupon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="没有优惠券券哦~~！"/>
</RelativeLayout>
