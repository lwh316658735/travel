<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background_color">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:background="@mipmap/person_bkg"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="个人中心"
        android:textColor="@android:color/white"
        android:textSize="18sp"/>

    <ImageView
        android:id="@+id/iv_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="10dp"

        android:background="@mipmap/person_touxiang_weidenglu"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_login"
        android:layout_alignLeft="@+id/iv_login"
        android:layout_alignStart="@+id/iv_login"
        android:background="@mipmap/person_nickname"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_login"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="2dp"
        android:text="您好"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/tv_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/iv_login"
        android:layout_alignStart="@+id/iv_login"
        android:layout_below="@+id/iv_login"
        android:layout_marginTop="10dp"
        android:text="点击登录"
        android:textColor="@android:color/white"
        android:textSize="18sp"/>


    <ListView
        android:id="@+id/lv_myListview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView4"
        android:background="#FFFFFF"
        android:divider="@drawable/shapr_divider"
        android:dividerHeight="1dp"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false"

        />


</RelativeLayout>